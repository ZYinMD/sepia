[
	{
		"name": "python: default",
		"scope": [
			"source.python"
		],
		"settings": {
			"foreground": "variable"
		}
	},
	{
		"name": "python: punctuation color reset",
		"scope": [
			"source.python punctuation"
		],
		"settings": {
			"foreground": "default"
		}
	},
	{
		"name": "python: arguments",
		"scope": [
			"meta.function-call.arguments"
		],
		"settings": {
			"foreground": "argument"
		}
	},
	{
		"name": "python: function call as arguments",
		"scope": [
			"meta.function-call.arguments meta.function-call"
		],
		// only the inner most arguments should be colored as argument
		// in the end it doesn't matter, as variable and argument are set to the same color
		"settings": {
			"foreground": "variable"
		}
	},
	{
		"name": "python: docstring",
		"scope": [
			"string.quoted.docstring",
			"string.quoted.docstring punctuation.definition.string"
		],
		"settings": {
			"foreground": "docstring"
		}
	}
]
