// In some languages (e.g. java and go), variable assignment is scoped as variable, but variable usage is not scoped. In these languages, I change the default to variable, then change the assignment to a brighter version of variable.

[
	{
		"name": "java: default color",
		"scope": [
			"source.java"
		],
		"settings": {
			"foreground": "variable"
		}
	},
	{
		"name": "java: punctuation color reset",
		"scope": [
			"source.java punctuation"
		],
		"settings": {
			"foreground": "default"
		}
	},
	{
		"name": "java: variable declaration",
		"scope": [
			"variable.other.definition.java"
		],
		"settings": {
			"foreground": "assignment"
		}
	},
	{
		"name": "java: arguments",
		"scope": [
			"meta.function-call.java",
			"meta.method-call.java" // because function calls are already scoped
		],
		"settings": {
			"foreground": "argument"
		}
	},
	{
		"name": "java: imported",
		"scope": [
			"storage.modifier.import"
		],
		"settings": {
			"foreground": "variable"
		}
	}
]
