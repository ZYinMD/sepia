[
	{
		"name": "default color",
		"scope": [
			"text",
			"source",
			"punctuation" // some languages's source color was manually set, so punctuation has to reset
		],
		"settings": {
			"foreground": "default"
		}
	},
	{
		"name": "data structures, types and identifiers, e.g. function names",
		"scope": [
			"entity.name"
		],
		"settings": {
			"foreground": "function"
		}
	},
	{
		"name": "function calls",
		"scope": [
			"meta.function-call",
			"meta.method-call",
			"meta.function-call entity.name.function", // the function name of the function call, or a standalone function call in JS,
			"meta.method-call entity.name.function" // similar as above
		],
		"settings": {
			"foreground": "call"
		}
	},
	{
		"name": "inherited class",
		"scope": [
			"entity.other.inherited-class"
		],
		"settings": {
			"foreground": "inherited"
		}
	},
	{
		"name": "variables",
		"scope": [
			"variable"
		],
		"settings": {
			"foreground": "variable"
		}
	},
	{
		"name": "properties",
		"scope": [
			"variable.other.property", // e.g. property of js object
			"variable.other.object.property", // e.g. property of a property of js object
			"support.type.property-name", // e.g. JSON key name
			"meta.object-literal.key" // e.g. key name of object literal
		],
		"settings": {
			"foreground": "property" // it's the same color as variable
		}
	},
	{
		"name": "reserved variables of the language: self, this, super, etc",
		"scope": [
			"variable.language"
		],
		"settings": {
			"foreground": "reserved"
		}
	},
	{
		"name": "built-in functions and variables of runtime: require, window, document, process, etc",
		"scope": [
			"support.variable",
			"support.class",
			"support.constant",
			"support.function"
		],
		"settings": {
			"foreground": "builtIn"
		}
	},
	{
		"name": "function parameter declaration",
		"scope": [
			"variable.parameter"
		],
		"settings": {
			"foreground": "parameter"
		}
	},
	{
		"name": "variable.function",
		"scope": [
			"variable.function" // never encountered this scope in real code
		],
		"settings": {
			"foreground": "builtIn"
		}
	},
	{
		"name": "booleans, null, undefined, escape, symbols, etc",
		"scope": [
			"constant"
		],
		"settings": {
			"foreground": "constant"
		}
	},
	{
		"name": "numbers",
		"scope": [
			"constant.numeric"
		],
		"settings": {
			"foreground": "number"
		}
	},
	{
		"name": "var, const, let, int, bool, char, func, function, class, def",
		"scope": [
			"storage.type"
		],
		"settings": {
			"foreground": "declaration"
		}
	},
	{
		"name": "static, inline, const, public, private",
		"scope": [
			"storage.modifier"
		],
		"settings": {
			"foreground": "storage"
		}
	},
	{
		"name": "legal but unsure / user constructs",
		"scope": [
			"support.type"
		],
		"settings": {
			"foreground": "curveball"
		}
	},
	{
		"name": "import / export",
		"scope": [
			"keyword.import",
			"keyword.export",
			"keyword.control.import", // python
			"keyword.control.export",
			"keyword.other.import",
			"keyword.other.export",
			"keyword.other.using", // c#
			"keyword.control.directive.include" // c
			// "meta.import",
			// "meta.export"
		],
		"settings": {
			"foreground": "module"
		}
	},
	{
		"name": "flow control",
		"scope": [
			"keyword.control"
		],
		"settings": {
			"foreground": "control"
		}
	},
	{
		"name": "conditional flow control", // only a few languages are able to enjoy this awesome feature, too bad
		"scope": [
			"keyword.control.conditional",
			"keyword.control.trycatch",
			"keyword.control.try",
			"keyword.control.loop",
			"switch-expression.expr keyword.control.switch"

		],
		"settings": {
			"foreground": "flow"
		}
	},
	{
		"name": "operators",
		"scope": [
			"keyword.operator"
		],
		"settings": {
			"foreground": "operator"
		}
	},
	{
		"name": "other keyword", // examples: "px" in css
		"scope": [
			"keyword"
		],
		"settings": {
			"foreground": "keyword"
		}
	},
	{
		"name": "string",
		"scope": [
			"string",
			"punctuation.definition.string"
		],
		"settings": {
			"foreground": "string"
		}
	},
	{
		"name": "Regular Expressions",
		"scope": [
			"string.regexp",
			"string.regexp punctuation.definition.string.begin",
			"string.regexp punctuation.definition.string.end",
			"constant.other.character-class.set.regexp",
			"constant.other.character-class.regexp",
			"constant.character.escape.backslash.regexp"
		],
		"settings": {
			"foreground": "regex"
		}
	},
	{
		"name": "variable interpolation",
		"scope": [
			"meta.string-contents.quoted.double punctuation.definition.variable",
			"punctuation.definition.interpolation",
			"punctuation.definition.template-expression.begin",
			"punctuation.definition.template-expression.end",
			"punctuation.definition.variable.makefile"
		],
		"settings": {
			"foreground": "regex"
		}
	},
	{
		"name": "comment",
		"scope": [
			"comment",
			"punctuation.definition.comment" // punctuations were manually set to default, so punctuation comment need to be manually excluded
		],
		"settings": {
			"foreground": "silver"
		}
	},
	{
		"name": "invalid",
		"scope": [
			"invalid"
		],
		"settings": {
			"foreground": "red"
		}
	},
	{
		"name": "invalid.deprecated",
		"scope": [
			"invalid.deprecated"
		],
		"settings": {
			"foreground": "deprecated"
		}
	},
	{
		"name": "directive",
		"scope": [
			"punctuation.definition.directive"
		],
		"settings": {
			"foreground": "control"
		}
	}
]
