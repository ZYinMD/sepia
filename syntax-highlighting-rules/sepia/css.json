[
	{
		"name": "CSS: property names",
		"scope": [
			"support.type.property-name",
			"support.type.vendored.property-name" // -webkit-
		],
		"settings": {
			"foreground": "property"
		}
	},
	{
		"name": "CSS: property value", // needs to be specified because support.constant was colored as "builtIn"
		"scope": [
			"meta.property-value",
			"support.constant.property-value",
			"support.constant.font-name",
			"support.constant.media-type",
			"support.constant.media"
		],
		"settings": {
			"foreground": "string"
		}
	},
	{
		"name": "CSS: @",
		"scope": "keyword.control.at-rule",
		"settings": {
			"foreground": "module"
		}
	},
	{
		"name": "CSS: !important",
		"scope": "keyword.other.important",
		"settings": {
			"foreground": "module"
		}
	},
	{
		"name": "color values",
		"scope": [
			"constant.other.color.rgb-value",
			"constant.other.rgb-value",
			"support.constant.color"
		],
		"settings": {
			"foreground": "number"
		}
	},
	{
		"name": "color names in English",
		"scope": [
			"support.constant.color.w3c-standard-color-name.css",
			"support.constant.color.w3c-extended-color-name"
		],
		"settings": {
			"foreground": "default" // color names should be colorless
		}
	}
]
