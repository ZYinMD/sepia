/*
	this file also includes:
		- JSX
		- class and id in css/sass
 */

[
	{
		"name": "html/xml tag",
		"scope": [
			"entity.name.tag",
			"punctuation.definition.tag", // anglebrackets of tags
			"punctuation.definition.tag source" // a very special case
		],
		"settings": {
			"foreground": "tag"
		}
	},
	{
		"name": "react Component name in tags",
		"scope": [
			"support.class.component.js"
		],
		"settings": {
			"foreground": "reactComponent"
		}
	},
	{
		"name": "html: class",
		"scope": [
			"meta.attribute.class string",
			// css selector ↓
			"entity.other.attribute-name.class",
			"entity.other.attribute-name.class punctuation.definition.entity"

		],
		"settings": {
			"foreground": "class"
		}
	},
	{
		"name": "html: id",
		"scope": [
			"meta.attribute.id string",
			// css selector ↓
			"entity.other.attribute-name.id",
			"entity.other.attribute-name.id punctuation.definition.entity"
		],
		"settings": {
			"foreground": "id"
		}
	},
	{
		"name": "html: attributes",
		"scope": [
			"entity.other.attribute-name"
		],
		"settings": {
			"foreground": "attribute"
		}
	},
	{
		"name": "JSX: equal sign between attribute names and value",
		"scope": [
			"meta.tag.attributes.js keyword.operator.assignment.js"
		],
		"settings": {
			"foreground": "default"
		}
	},
	{
		"name": "the & before HTML entity",
		"scope": [
			"punctuation.definition.entity"
		],
		"settings": {
			"foreground": "constant"
		}
	}
]
